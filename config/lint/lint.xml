        <ignore regexp=".*okio.*" />
        <ignore regexp=".*retrofit.*" />
    </issue>

    <!-- Look later for a better alternative -->
    <issue id="GifUsage">
        <ignore regexp="res/drawable-nodpi/o_.*[.]gif" />
    </issue>

    <!-- False positives with Kotlin. -->
    <issue id="NewApi" severity="informational" />

    <!-- False positives with Kotlin. -->
    <issue id="CheckResult" severity="informational" />
</lint>
