<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="me.proxer.app">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:appCategory="social"
        android:extractNativeLibs="false"
        android:fullBackupContent="@xml/backup_config"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/Theme.App"
        tools:ignore="UnusedAttribute">

        <meta-data
            android:name="android.webkit.WebView.EnableSafeBrowsing"
            android:value="true" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data
                android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts" />
        </activity>

        <activity
            android:name=".profile.ProfileActivity"
            android:theme="@style/Theme.App.Translucent">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="proxer.me"
                    android:pathPrefix="/user/"
                    android:scheme="http" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="proxer.me"
                    android:pathPrefix="/user/"
                    android:scheme="https" />
            </intent-filter>
        </activity>

        <activity android:name=".notification.NotificationActivity" />

        <activity android:name=".chat.ChatActivity" />

        <activity android:name=".chat.create.CreateChatActivity" />

        <activity android:name=".chat.conference.info.ConferenceInfoActivity" />

        <activity android:name=".ucp.UcpActivity" />

        <activity
            android:name=".media.MediaActivity"
            android:theme="@style/Theme.App.Translucent">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="proxer.me"
                    android:pathPrefix="/info/"
                    android:scheme="http" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="proxer.me"
                    android:pathPrefix="/info/"
                    android:scheme="https" />
            </intent-filter>
        </activity>

        <activity
            android:name=".info.translatorgroup.TranslatorGroupActivity"
            android:theme="@style/Theme.App.Translucent" />

        <activity
            android:name=".info.industry.IndustryActivity"
            android:theme="@style/Theme.App.Translucent" />

        <activity
            android:name="me.proxer.app.ui.ImageDetailActivity"
            android:theme="@style/Theme.App.Transparent" />

        <activity
            android:name=".anime.StreamActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode">
            <intent-filter tools:ignore="AppLinkUrlError">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:scheme="http" />
                <data android:scheme="https" />
                <data android:mimeType="video/*" />
            </intent-filter>
        </activity>

        <activity android:name=".manga.MangaActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="proxer.me"
                    android:pathPrefix="/chapter/"
                    android:scheme="http" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="proxer.me"
                    android:pathPrefix="/chapter/"
                    android:scheme="https" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="proxer.me"
                    android:pathPrefix="/read/"
                    android:scheme="http" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="proxer.me"
                    android:pathPrefix="/read/"
                    android:scheme="https" />
            </intent-filter>
        </activity>

        <activity android:name=".anime.AnimeActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="proxer.me"
                    android:pathPrefix="/watch/"
                    android:scheme="http" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="proxer.me"
                    android:pathPrefix="/watch/"
                    android:scheme="https" />
            </intent-filter>
        </activity>

        <activity
            android:name="me.proxer.app.ui.crash.CrashActivity"
            android:process=":error_activity">
            <intent-filter>
                <action android:name="cat.ereza.customactivityoncrash.ERROR" />
            </intent-filter>
        </activity>

        <activity android:name="me.proxer.app.ui.WebViewActivity" />

        <receiver
            android:name=".news.NewsNotificationDeletionReceiver"
            android:exported="false" />

        <receiver
            android:name=".news.NewsNotificationReadReceiver"
            android:exported="false" />

        <receiver
            android:name=".notification.AccountNotificationDeletionReceiver"
            android:exported="false" />

        <receiver
            android:name=".notification.AccountNotificationReadReceiver"
            android:exported="false" />

        <receiver
            android:name=".manga.local.LocalMangaDownloadCancelReceiver"
            android:exported="false" />

        <receiver
            android:name=".chat.sync.ChatNotificationReadReceiver"
            android:exported="false" />

        <receiver
            android:name=".chat.sync.DirectReplyReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="me.proxer.app.ACTION_MESSAGE_REPLY" />
            </intent-filter>
        </receiver>
    </application>
</manifest>
