<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:padding="@dimen/item_margin"
    tools:context=".media.list.MediaAdapter">

    <com.santalu.aspectratioimageview.AspectRatioImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        app:ari_aspect="height"
        app:ari_ratio="1.25"
        tools:ignore="UnusedAttribute"
        tools:layout_height="200dp"
        tools:src="@drawable/emoji_ios_1f1ef_1f1f5" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/episode"
        android:layout_alignEnd="@+id/image"
        android:layout_alignRight="@+id/image"
        android:background="@color/half_transparent"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="3"
        android:padding="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@android:color/white"
        tools:text="Some title" />

    <TextView
        android:id="@+id/episode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image"
        android:layout_alignEnd="@+id/image"
        android:layout_alignRight="@+id/image"
        android:background="@color/half_transparent"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@android:color/white"
        tools:text="Episode 55" />

    <FrameLayout
        android:id="@+id/ratingContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/image"
        android:layout_alignRight="@+id/image"
        android:layout_below="@+id/image"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical|start">

        <me.zhanghai.android.materialratingbar.MaterialRatingBar
            android:id="@+id/rating"
            style="?attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.1" />
    </FrameLayout>

    <TextView
        android:id="@+id/airingInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingContainer"
        android:layout_marginTop="8dp"
        tools:text="Airing: 12:55\nAvailable: 13:55" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/airingInfo"
        android:layout_marginTop="8dp"
        android:background="@color/divider" />

    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:lines="2"
        tools:text="Aired\n00:01:01:55 remaining" />
</RelativeLayout>
