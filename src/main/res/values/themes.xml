<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.App" parent="Base.Theme.App.DayNight">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryLight">@color/primary_light</item>

        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryDark">@color/secondary_dark</item>
        <item name="colorSecondaryLight">@color/secondary_light</item>
    </style>

    <style name="Theme.App.NoBackground" parent="Theme.App">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>
